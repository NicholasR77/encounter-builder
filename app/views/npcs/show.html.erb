<div class="col-8">
    <h2><%= @npc.name %></h2>
    <div class="model-navbar-outer">
        <div class="model-navbar-inner">
            <div class="left">
                <h4>Options</h4>
            </div>
            <div class="right">
                <%= button_to "Edit NPC", edit_npc_path(@npc), method: :get, class: "btn btn-primary" %>
                <%= button_to "Delete NPC", npc_path(@npc), method: :delete, class: "btn btn-primary",  data: { confirm: "Are you sure you want to delete?" } %>
            </div>    
        </div>
    </div>
    <p>Description: <%= @npc.description %></p>
</div>