<%= form_for @pc do |f| %>

    <% if @pc.errors.any? %>
        <div id="error_explanation">
            <div class="alert alert-danger">
                <% @pc.errors.full_messages.each do |msg| %>
                        <%= msg %><br>
                <% end %>
            </div>
        </div>
    <% end %>

    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :description, "Description: " %>
    <%= f.text_area :description, class: "form-control" %>

    <h4>Select an Item That Belongs to This PC</h4>
     <%= f.collection_check_boxes :item_ids, Item.all, :id, :name do |item_checkboxes| %>
        <%= item_checkboxes.check_box %>
        <%= item_checkboxes.label %>
        <br>
    <% end %>

    <%= f.submit 'Submit', class: "btn btn-primary" %>
<% end %>