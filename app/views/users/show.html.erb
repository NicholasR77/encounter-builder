<h2>My Account</h2>
<p>First Name: <%= @user.first_name %></p>
<p>Last Name: <%= @user.last_name %></p>
<p>Email: <%= @user.email %></p>
<%= button_to "Edit Account", edit_user_path(@user), method: :get, class: "btn btn-primary" %>
<%= button_to "Delete Account", user_path(@user), method: :delete, class: "btn btn-primary",  data: { confirm: "Are you sure you want to delete?" } %>
