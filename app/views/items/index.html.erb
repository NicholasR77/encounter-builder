<% if @items.empty?%>
    <h2>Looks like you haven't created anything yet!</h2>
<% else %>
    <h2>Your Item's</h2>
    <% @items.each do |item| %>
        <h3><%= link_to item.name, item_path(item) %></h3>
        <p><%= item.description %></p>
    <% end %>
    <%= button_to  "Create a New Item", new_item_path, method: :get, class: "btn btn-primary" %>
<% end %>
